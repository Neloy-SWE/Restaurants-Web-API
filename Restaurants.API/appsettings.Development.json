{
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Arges": {
          "outputTemplate": "[{Timestamp:dd-MM-yyyy hh:mm:ss tt} {newLine}{Level:u3}] |{SourceContext}| {newLine}{Message:lj}{NewLine}{Exception}{newLine}{newLine}{newLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Restaurants-API-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
          //"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}
